#include <stdio.h>
#include <string.h>

int main() {
   char str[20];
   int i;
   printf("Enter string : ");
   scanf("%s",str);
   for(i=0;i<=strlen(str);i++)
   {
       if(str[i]>=65  && str[i]<=90)
       str[i]= str[i]+32;
   }
   printf("lowercase string :%s",str);
    return 0;
}



OUTPUT

Enter string : ABCDEFG
lowercase string :abcdefg

